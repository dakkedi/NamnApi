
@model Name.Models.NameDropdownModel

<label for="name-type">Pick a type</label>
<select id="name-type" name="nameTypeData">
    @foreach (var typeItem in Model.TypeItems)
    {
        <option value="@typeItem.Value" @if ((string)TempData["type"] == typeItem.Value.ToString()) { <text>selected</text> }>@typeItem.Text</option>
    }
</select>